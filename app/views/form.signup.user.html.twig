{% extends 'form.signup.html.twig' %}
{%block progress_bar %}
{% if signup_for == 'host' %}
<div class="text-center">
STEP 1 OF 5</div>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 20%;">20%</div>
</div>
{% elseif signup_for == 'guest' %}
<div class="text-center">
STEP 2 OF 4</div>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">50%</div>
</div>
{% endif %}
{% endblock progress_bar %}
{% block form %}

{% if signup_for == 'guest' %}
<h5>HOST NAME: {{ group.host.firstname }} {{ group.host.lastname }}</h5>
<h5>HOST DATE: {{ group.startsAt|date("m/d/Y") }}</h5>
<h5>HOST TIME: {{ group.startsAt|date("g A") }}</h5>
<h5>HOST LOCATION: {{ group.host.address.street }}</h5>
<h5>POOL INFO: {{ group.lesson.pool.accessinfo }}</h5>
{% endif %}
{{ form_start(form)}}
<div class="page-header"><h1><small>Parents Information</small></h1></div>
<h4>Host Name</h4>
{{ form_row(form.user.firstname) }}
{{ form_row(form.user.lastname) }}
<h4>Spouse Name</h4>
{{ form_row(form.user.spouse_firstname) }}
{{ form_row(form.user.spouse_lastname) }}
<h4>Contat Info</h4>
{{ form_row(form.user.mobile) }}
{{ form_row(form.user.home) }}
<div class="page-header"><h1><small>Address</small></h1></div>
{{ form_row(form.user.address.street) }}
{{ form_row(form.user.address.city) }}
{{ form_row(form.user.address.state) }}
{{ form_row(form.user.address.zip) }}
<div class="page-header"><h1><small>Create your login account</small></h1></div>
{{ form_row(form.user.email) }}
{{ form_row(form.user.password) }}

{{ form_end(form)}}
{% endblock form %}
